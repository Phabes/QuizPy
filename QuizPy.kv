                    Button:
                        text: "CREATE QUIZ"
                        size_hint: 0.5, 0.8
                        pos_hint: {"center_y": 0.5}
                        on_press: root.manager.create_quiz()
                    Button:
                        text: "LOGOUT"
                        size_hint: 0.5, 0.8
                        pos_hint: {"center_y": 0.5}
                        on_press: root.manager.logout_user()
        ScrollView:
            size_hint: 1,None
            height: root.height - 80
            scroll_wheel_distance: 80
            GridLayout:
                id: quiz_grid
                cols: 2
                size_hint: 1, None
                height: self.minimum_height

