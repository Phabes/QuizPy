                    BoxLayout:
                        size_hint: 0.5, 0.8
                        pos_hint: {"center_y": 0.5}
                        Label:
                            id: user_hello
                            size_hint: 1, 1
            AnchorLayout:
                anchor_x: "right"
                size_hint: 0.5, 1
                BoxLayout:
                    orientation: "horizontal"
